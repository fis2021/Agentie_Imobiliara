<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="11" prefHeight="500" prefWidth="700"
          vgap="11" xmlns="http://javafx.com/javafx/10.0.2-internal"
          fx:controller="org.loose.fis.sre.controllers.EdithouseController">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>
    <Text id="title-text" text="Agentie Imobiliara" wrappingWidth="124.125" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />
    <Text id="title-text1" text="Edit a house" wrappingWidth="124.125" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="1" />
    <TextField fx:id="Address" id="address" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="Size" id="size" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

    <Label text="Size of the house (m^2):" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="Rooms" id="rooms" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

    <Label text="Number of rooms:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <TextField fx:id="Baths" id="baths" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

    <Label text="Number of baths:" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <TextField fx:id="Floors" id="floors" GridPane.columnIndex="1" GridPane.rowIndex="7"/>

    <Label text="Number of floors:" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
    <TextField fx:id="Special" id="special" GridPane.columnIndex="1" GridPane.rowIndex="8"/>

    <Label text="Any special features:" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
    <Text fx:id="edithouseMessage" id="edithouseMessage" GridPane.columnIndex="1" GridPane.rowIndex="10"/>
    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="9">
        <Button  onAction="#handleEditHouseAction" id="editButton" text="Save changes"/>
    </HBox>
    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="2" GridPane.rowIndex="3">
        <Button   onAction="#handleSearchHouseAction" id="searchButton" text="Search house"/>
    </HBox>
</GridPane>